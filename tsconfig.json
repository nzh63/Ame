{
  "compilerOptions": {
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["./src/main/*"],
      "@render/*": ["./src/render/*"],
      "@remote/*": ["./src/remote/*"],
      "@remote": ["./src/remote/index"],
      "@type/*": ["./src/type/*"],
      "@static/*": ["./build/static/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue", "test/**/*.ts"],
  "exclude": ["**/node_modules", "**/.*/"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ES2017",
      "module": "esnext"
    }
  }
}
