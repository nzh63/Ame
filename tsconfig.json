{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "./src/main/*"
      ],
      "@render/*": [
        "./src/render/*"
      ],
      "@type/*": [
        "./src/type/*"
      ],
      "@static/*": [
        "./static/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ES2017",
      "module": "esnext"
    }
  }
}